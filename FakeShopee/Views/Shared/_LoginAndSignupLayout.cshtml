<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FakeShopee</title>

    <!-- Style -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FakeShopee.styles.css" asp-append-version="true"/>

    <!-- kiểu chữ -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">

    <!-- icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
        integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- reset css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">

    <!-- icon trên thanh công cụ -->
    <link rel="icon"
        href="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ4vc7ajSAFRMXR8hzNIIv9NDgYs1kT8PE3rg&usqp=CAU"
        type="image/gif" sizes="16x16">

    <style>
        .las-header-navBar {
            height: 84px;
            display: flex;
            align-items: center;
        }

        .las-header-container {
            width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: start;
            align-items: center;
        }

        .las-header-info {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .las-header-logo {
            height: 42px;
        }

        .las-header-title {
            color: #222;
            font-size: 1.5rem;
        }

        .las-main-container {
            height: max(calc(100vh - 84px), 600px);
            background-color: rgb(238, 78, 46);
        }
        .las-main-background{
            margin: 0 auto;
            min-height: 600px;
            width: 1040px;
            display: flex;
            align-items: center;
            justify-content: end;
        }
        .las-main-mid{
            display: flex;
            justify-content: end;
            align-items: center;
        }
        .las-main-formBox{
            background-color: #fff;
            box-sizing: border-box;
            box-shadow: 0 3px 10px 0 rgba(0,0,0,.14);
            border-radius: 4px;
            overflow: hidden;
            min-height: 482px;
            width: 400px;
        }
        .las-main-background{
            background-image: url(../../img/las-background.png);
            background-size: contain; 
            background-repeat: no-repeat; 
            background-position: center center
        }
    </style>

</head>

<body>
    <header class="las-header">
        <nav class="las-header-navBar">
            <div class="las-header-container">
                <div class="las-header-info">
                    <a href="/">
                        <img class="las-header-logo" src="~/img/logo-orange.png" alt="logo"/>
                    </a>
                    <div class="las-header-title">@ViewData["Title"]</div>
                </div>
            </div>
        </nav>
    </header>
    <div class="las-main-container">
            <div class="las-main-background" >
                <div class="las-main-mid">
                    @* <div class="MIUGgs"></div> *@
                    <div class="las-main-formBox">
                        @RenderBody()
                    </div>
                </div>
            </div>
    </div>

    <footer>
        <partial name="_Footer" />
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>